import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        long n = scan.nextLong();
        n = Math.abs(n);
        long sum = 0;
        while(n > 0)
        {
            sum += n % 10;
            n /= 10;
        }
        System.out.println(sum);
    }
}
        
